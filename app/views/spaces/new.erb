<h1> Add Space </h1>

<body>
  <form action="/spaces/add" method="post">
    <label for="space_name">
      Space name:
      <input type="text" name="space_name"
      placeholder="Add space name">
    </label>
    <br>
    <label for="description">
      Description:
      <input type="text" name="description"
      placeholder="Add description">
    </label>
    <br>
    <label for="description">
      Price per night:
      <input type="number" name="price"
      placeholder="Add price">
    </label>
    <br>
    <label for="description">
     Available from:
     <input type="text" name="date_from"  id="availableFrom">
    </label>
    <br>
    <label for="description">
     Available to:
     <input type="text" name="date_to"  id="availableTo">
    </label>
    <br>
    <input type="submit" name = "Add Space" value="Add Space">
  </form>

</body>
